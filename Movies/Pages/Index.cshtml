@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="content">
    <div class="results">
        <h1>Movies</h1>
        @foreach (Movie movie in Model.Movies)
        {
            <div class="movie-entry">
                <p>@movie.Title (@movie.Year)</p>
                <p>Rated @movie.MPAA_Rating</p>
                <div class="reviews">
                    <div>
                        Rotten Tomatoes
                        <h3>
                            @movie.Rotten_Tomatoes_Rating
                        </h3>
                    </div>
                    <div>
                        IMBD
                        <h3>
                            @movie.IMDB_Rating
                        </h3>
                    </div>
                </div>
            </div>
        }
    </div>
    <form method="post">
        <h4>Search</h4>
        <input type="text" name="search" />
        <input type="submit" value="Search" />

        <div class="checkbox-list">
            <h4>Filter By Rating</h4>
            <label>
                <input type="checkbox" value="G" name="rating" />
                Rated G
            </label>

            <label>
                <input type="checkbox" value="PG" name="rating" />
                Rated PG
            </label>

            <label>
                <input type="checkbox" value="PG-13" name="rating" />
                Rated PG-13
            </label>

            <label>
                <input type="checkbox" value="R" name="rating" />
                Rated R
            </label>

            <label>
                <input type="checkbox" value="NC-17" name="rating" />
                Rated NC-17
            </label>
        </div>
        
    </form>
</div>





